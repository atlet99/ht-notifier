{{/* Advanced Slack template for successful scan */}}
{
  "text": "{{.Title}}",
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "{{.Title}}"
      }
    },
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{{.Body}}"
      }
    }
    {{if .SeverityCounts}},
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*Scan Summary:*\n{{range $severity, $count := .SeverityCounts}}â€¢ {{severityIcon $severity}} *{{upper $severity}}*: {{criticalCount .SeverityCounts}}{{if gt $count 0}} ({{add $count 1}}){{end}}\n{{end}}"
      }
    }
    {{end}}
    {{if .Link}},
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View in Harbor"
          },
          "url": "{{.Link}}",
          "style": "primary"
        }
      ]
    }
    {{end}}
  ]
}