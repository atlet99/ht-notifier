# Application Configuration
VERSION=0.1.0
COMMIT=dev
DATE=$(date -u +%Y-%m-%dT%H:%M:%SZ)
IMAGE_NAME=ghcr.io/atlet99/ht-notifier

# Server Configuration
SERVER_PORT=8080
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Harbor Configuration
HARBOR_ADMIN_PASSWORD=Harbor12345
DATABASE_PASSWORD=changeit
SECRET_KEY=not-a-secure-secret
JWT_SECRET=not-a-secure-jwt-secret

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin

# Notification Configuration (Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Notification Configuration (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.org
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=Harbor Alerts <alerts@example.org>
EMAIL_TO=devsecops@example.org,oncall@example.org

# Notification Configuration (Slack)
SLACK_TOKEN=xoxb-your-slack-token
SLACK_CHANNEL=#alerts

# Security Configuration
HARBOR_WEBHOOK_SECRET=your_webhook_secret
SERVER_HMAC_SECRET=your_hmac_secret
SERVER_IP_ALLOWLIST=10.0.0.0/8,100.64.0.0/10

# Processing Configuration
MAX_CONCURRENCY=8
MAX_QUEUE=1024
RETRY_MAX_ATTEMPTS=8
RETRY_INITIAL_BACKOFF=1s
RETRY_MAX_BACKOFF=2m