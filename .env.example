# Harbor Notifier Configuration
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_ADDR=:8080
SERVER_BASE_PATH=/
SERVER_READ_HEADER_TIMEOUT=5s
SERVER_SHUTDOWN_TIMEOUT=10s
SERVER_ENABLE_PPROF=false

# Harbor Configuration
HARBOR_BASE_URL=https://harbor.local
HARBOR_USERNAME=admin
HARBOR_PASSWORD=harbor_password
HARBOR_INSECURE_SKIP_VERIFY=false
HARBOR_TIMEOUT=30s

# Telegram Notification Configuration
NOTIFY_TELEGRAM_ENABLED=false
NOTIFY_TELEGRAM_BOT_TOKEN=your_telegram_bot_token
NOTIFY_TELEGRAM_CHAT_ID=your_chat_id
NOTIFY_TELEGRAM_TIMEOUT=5s
NOTIFY_TELEGRAM_RATE_PER_MINUTE=30

# Email Notification Configuration
NOTIFY_EMAIL_ENABLED=true
NOTIFY_EMAIL_SUBJECT_PREFIX="[Harbor Alert]"

# SMTP Configuration
NOTIFY_EMAIL_SMTP_HOST=smtp.gmail.com
NOTIFY_EMAIL_SMTP_PORT=587
NOTIFY_EMAIL_SMTP_USERNAME=your_email@gmail.com
NOTIFY_EMAIL_SMTP_PASSWORD=your_app_password
NOTIFY_EMAIL_SMTP_FROM=your_email@gmail.com
NOTIFY_EMAIL_SMTP_STARTTLS=true
NOTIFY_EMAIL_SMTP_TIMEOUT=30s
NOTIFY_EMAIL_SMTP_AUTH_TYPE=xoauth2
NOTIFY_EMAIL_SMTP_ENCRYPTION=tls
NOTIFY_EMAIL_SMTP_HELO_HOST=
NOTIFY_EMAIL_SMTP_LOCAL_NAME=
NOTIFY_EMAIL_SMTP_DISABLE_HELO=false
NOTIFY_EMAIL_SMTP_DISABLE_STARTTLS=false
NOTIFY_EMAIL_SMTP_SSL_INSECURE=false
NOTIFY_EMAIL_SMTP_SSL_NOCERTCHECK=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_HOSTNAME=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_CA=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_CRL=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_OCSP=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_SIGNATURE=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_EXT_KEY_USAGE=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_KEY_USAGE=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_SERVER_NAME=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_SUBJECT=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_SANS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_EMAIL=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_IP=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_DNS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_URIS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_OTHER_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_ALL_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_ANY_NAME=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_SANS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_EMAIL=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_IP=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_DNS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_URIS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_OTHER_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_ALL_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_ANY_NAME=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_SANS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_EMAIL=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_IP=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_DNS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_URIS=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_OTHER_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_ALL_NAMES=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_ANY_NAME=false
NOTIFY_EMAIL_SMTP_SSL_NOVERIFY_NO_NO_NO_NAMES=false

# Email Recipients (comma-separated)
NOTIFY_EMAIL_TO=admin@example.com,security@example.com

# Processing Configuration
PROCESSING_ENRICH_VIA_HARBOR_API=true
PROCESSING_MAX_CONCURRENCY=8
PROCESSING_MAX_QUEUE=1024
PROCESSING_RETRY_MAX_ATTEMPTS=8
PROCESSING_RETRY_INITIAL_BACKOFF=1s
PROCESSING_RETRY_MAX_BACKOFF=2m

# Observability Configuration
OBSERVABILITY_METRICS_ADDR=:9090
OBSERVABILITY_LOG_LEVEL=info
OBSERVABILITY_LOG_FORMAT=json

# Configuration File Path (optional)
CONFIG_PATH=/etc/notifier/config.yaml

# Environment File Path (optional)
ENV_FILE=/etc/notifier/.env

# Configuration Directory (optional)
CONFIG_DIR=/etc/notifier